<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  <%= f.label :username, "Your Name:" %>
  <%= f.text_field :username, placeholder: "Enter username" %><br>
  <%= f.label :email, "Your Email:" %>
  <%= f.text_field :email, placeholder: "Enter email" %><br>
  <%= f.label :password, "Your Password:" %>
  <%= f.password_field :password, placeholder: "Enter password" %><br>
  <%= f.submit %>
<% end %>
